module;

import ^.*;

namespace Leaderboard {
    struct s_reward {
        player: pubkey;
        points: integer;
    }

    entity __def {
        player: pubkey;
        mutable points: integer;
    }

    function ensure(player: pubkey) {
        val res = __def @? {player};

        if(res == null) {
            return create __def(player, 0);
        }

        return res;
    }
}
